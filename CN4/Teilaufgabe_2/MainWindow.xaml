<Window x:Class="Teilaufgabe_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Teilaufgabe_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="20">
        <Rectangle Width="200" Height="50" Fill="Aqua"/>
        <Rectangle Width="200" Height="50" Fill="{local:RandomColor}"/>
        <Rectangle Width="200" Height="50" Fill="{local:RandomColor}"/>
        <Rectangle Width="200" Height="50" Fill="{local:RandomColor 100}"/>
        <Rectangle Width="200" Height="50" Fill="{local:RandomColor 40}"/>
    </StackPanel>
</Window>
